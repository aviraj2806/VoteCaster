<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity">


    <TextView
        android:id="@+id/txtRegBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_back_dark"
        android:drawablePadding="5dp"
        android:fontFamily="@font/seguisb"
        android:padding="10dp"
        android:text="Register"
        android:textColor="#212121"
        android:textSize="20sp"
        app:drawableTint="@color/colorAccent" />

    <ScrollView
        android:id="@+id/svReg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgReg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/avatar" />

                <ImageView
                    android:id="@+id/imgRegEdit"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="false"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/imgReg"
                    app:srcCompat="@drawable/edit" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/seguisb"
                android:gravity="center"
                android:text="@string/voter"
                android:textColor="#707070"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etRegName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="5dp"
                android:drawableTint="@color/colorAccent"
                android:ems="10"
                android:fontFamily="@font/seguisb"
                android:hint="Enter Name (Min. 3 characters)"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="#707070"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etRegEnroll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="5dp"
                android:drawableTint="@color/colorAccent"
                android:ems="10"
                android:fontFamily="@font/seguisb"
                android:hint="Enter Enrollment No."
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="#707070"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etRegClass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:drawableLeft="@drawable/ic_class"
                android:drawablePadding="5dp"
                android:drawableTint="@color/colorAccent"
                android:ems="10"
                android:fontFamily="@font/seguisb"
                android:hint="Enter Class"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="#707070"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etRegYear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:drawableLeft="@drawable/ic_year"
                android:drawablePadding="5dp"
                android:drawableTint="@color/colorAccent"
                android:ems="10"
                android:fontFamily="@font/seguisb"
                android:hint="Enter Year (Y)"
                android:inputType="number"
                android:maxLength="1"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="#707070"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etRegEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="5dp"
                android:drawableTint="@color/colorAccent"
                android:ems="10"
                android:fontFamily="@font/seguisb"
                android:hint="Enter Email"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="#707070"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etRegMobile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:drawablePadding="5dp"
                android:drawableTint="@color/colorAccent"
                android:ems="10"
                android:fontFamily="@font/seguisb"
                android:hint="Enter Mobile No."
                android:inputType="number"
                android:maxLength="10"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="#707070"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRegPass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableStart="@drawable/ic_lock_black_24dp"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/colorAccent"
                    android:ems="10"
                    android:fontFamily="@font/seguisb"
                    android:hint="Enter Password (Min. 6 characters)"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="#707070"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRegCPass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableStart="@drawable/ic_lock_black_24dp"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/colorAccent"
                    android:ems="10"
                    android:fontFamily="@font/seguisb"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="#707070"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/txtReg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_acc_fill"
                android:fontFamily="@font/seguisb"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:text="Register"
                android:textColor="#ffffff"
                android:textSize="16sp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>